{
    "manifest_version": 3,
    "name": "Siftly Chatgpt Scraper",
    "description": "Scrape Chatgpt responses after prompt usage",
    "version": "0.4.0",
    "icons": {
        "16": "icon/siftly-16.png",
        "32": "icon/siftly-32.png",
        "48": "icon/siftly-48.png",
        "128": "icon/siftly-128.png"
    },
    "permissions": [
        "scripting",
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://aunpbdtpdp.us-west-2.awsapprunner.com/*",
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
    ],
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "matches": [
                "https://aunpbdtpdp.us-west-2.awsapprunner.com/*",
                "https://chatgpt.com/*",
                "https://chat.openai.com/*"
            ],
            "run_at": "document_start"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "My Extension"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "page-hook.js"
            ],
            "matches": [
                "https://chatgpt.com/*"
            ]
        }
    ]
}